doctype html
html(lang='en')
    head
        title Fiches & Sheets
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
        script(src='https://unpkg.com/htmx.org@2.0.1')
        style
            |body {padding: 20px}
            |a {display: block;}
    body
        a(href="/fiches") FichesEtSheets
        a(href="/welcome") Welcome
        a(href="/review") Review
        a(href="/rsvp") RSVP
        a(href="/admin") Admin
    div(class="rootBoxes" id="rootBoxes")
        each box in rootBoxes
            div(class="box")
            h2= box.toJSON().title
            p= box.toJSON().details
