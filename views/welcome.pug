html(lang='en')
  head
    title Usha & Rémi | Welcome
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Playfair+Display")
    script(src='https://unpkg.com/htmx.org@2.0.1')
    link(href="static/css/welcome.css" rel="stylesheet")
    link(rel="icon" href="/static/fav/favicon.ico")
  body
    div(class="lang sticky-top position-sticky")
      a(href="?lang=en" class="text-reset text-decoration-none") 
        img(src="static/icons/en-256.png" class=`${lang == "en" ? "l_active" : "l_inactive"}`)
      a(href="?lang=fr" class="text-reset text-decoration-none") 
        img(src="static/icons/fr-256.png" hx-get="?lang=fr" class=`${lang == "fr" ? "l_active" : "l_inactive"}`)
    div(class="container-fluid")
      div(class="row flex-fill")
        nav(class="col-md-7 sidebar h-100")
          div(id="carouselExampleControls" class="carousel slide smallnoshow" data-bs-ride="carousel")
            div(class="carousel-inner")
              div(class="carousel-item w-100 active")
                img(src="/static/images/photo_1.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_7.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_3.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_6.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_4.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_5.jpg" class="d-block" alt="...")
          div(id="carouselExampleControls2" class="carousel slide bignoshow" data-bs-ride="carousel")
            div(class="carousel-inner")
              div(class="carousel-item w-100 active")
                img(src="/static/images/photo_3.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_6.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_7_phone.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_1_phone.jpg" class="d-block" alt="...")
              div(class="carousel-item w-100")
                img(src="/static/images/photo_4.jpg" class="d-block" alt="...")
          div(class="botleft")
            p(class="maintitle") Usha & Rémi
            p(class="texttitle")= __('Introduction')
        main(role="main" class="col-md-5 text-center gx-0")
          div(class="invitation")
            div(class="vcenter")
              p(class="datewedding")= __('MarriageDate')
              p(class="locationwedding") Toulouse, France
              p(class="viewLocations") 
                span()= __('CeremonyLocation')
                br
                span()= __('ReceptionLocation')
              button(class="rsvp" onclick="window.location.href='rsvp'+ window.location.search") RSVP
              a(class="text-reset text-decoration-none" rel="nofollow" href="#posts")
                p(class="viewdetails")= __('ViewDetails')
                svg(width="66" height="15" viewBox="0 0 66 15" fill="none" class="arrowanim" )
                  path(opacity="0.8" fill-rule="evenodd" clip-rule="evenodd" d="M30.294 14.1a10 10 0 005.882 0l27.905-8.586a2.5 2.5 0 00-1.47-4.779L36.176 8.87a10 10 0 01-5.882 0L3.86.735a2.5 2.5 0 00-1.47 4.78L30.293 14.1z" fill="currentColor")
            div(class="deco" )
          div(class="posts" id="posts")
            each post in posts
              div(class="post")
                h1= post.toJSON().title
                div !{post.toJSON().htmlcontent}