html(lang='en')
  head
    title Usha & Rémi | RSVP
    meta(name="viewport" content="width=device-width, initial-scale=1")
    script(src='static/js/jquery-3.7.1.min.js')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Inter&family=Roboto&family=Playfair+Display" rel="stylesheet")
    script(src='https://unpkg.com/htmx.org@2.0.1')
    link(href="static/css/welcome.css" rel="stylesheet")
    script(src='static/js/js_rsvp.js')
    link(rel="icon" href="/static/fav/favicon.ico")
  body(class="bodyrsvp")
    div(class="lang sticky-top position-sticky")
      a(href="?lang=en" class="text-reset text-decoration-none") 
        img(src="static/icons/en-256.png" class=`${lang == "en" ? "l_active" : "l_inactive"}`)
      a(href="?lang=fr" class="text-reset text-decoration-none") 
        img(src="static/icons/fr-256.png" hx-get="?lang=fr" class=`${lang == "fr" ? "l_active" : "l_inactive"}`)

    div(class="modal fade" id="saveModal" tabindex="-1" aria-labelledby="saveModalLabel" aria-hidden="true")
      div(class="modal-dialog")
        div(class="modal-content")
          div(class="modal-body")
            p(id="message_save") text
          div(class="modal-footer")
            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="myreload()") OK

    a(href=`/?lang=${lang}` class="text-decoration-none")
      h1 Usha & Rémi 
      p(class="datersvp") Toulouse, France 
      p(class="datersvp")= __('MarriageDate')
    
    div
      form(hx-get=`/rsvp/person?lang=${lang}` hx-swap="innerHTML swap:0.5s" hx-target="closest div" class="mb-3")
        p(class="formtextrsvp")= __('RSVPInfo')
        div(class="d-flex flex-row justify-content-center")
          div(class="d-flex flex-column align-items-start")
            label(class="formrsvp")= __('FirstName')
            input(type="text" name="firstname" placeholder=__('FirstName') class="inputrsvp") 
          div(class="d-flex flex-column align-items-start")
            label(class="formrsvp")= __('LastName')
            input(type="text" name="lastname" placeholder=__('LastName') class="inputrsvp") 
        div(class="d-flex flex-row justify-content-center")
          button(type="submit" class="btn btn-primary formbutton")= __('Next')